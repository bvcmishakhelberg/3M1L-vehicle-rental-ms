@model IEnumerable<_3M1L_vehicle_rental_ms.Models.Customer>

<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model)
        {
            <tr>
                <td>@customer.JokeQuestion</td>
                <td>@customer.JokeAnswer</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@customer.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@customer.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create">Add New Customer</a>