@model IEnumerable<_3M1LVehicleRentalsMs.Models.Customer>



@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.First().CustomerName)</th>
                <th>@Html.DisplayNameFor(model => model.First().CustomerType)</th>
                <th>@Html.DisplayNameFor(model => model.First().CustomerEmail)</th>
                <th>@Html.DisplayNameFor(model => model.First().PhoneNumber)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CustomerName)</td>
                    <td>@Html.DisplayFor(modelItem => item.CustomerType)</td>
                    <td>@Html.DisplayFor(modelItem => item.CustomerEmail)</td>
                    <td>@Html.DisplayFor(modelItem => item.PhoneNumber)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No customers available.</p>
}

